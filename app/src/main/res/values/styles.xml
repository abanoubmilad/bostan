<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="label_input" parent="label">
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/font_larger</item>

    </style>

    <style name="field_input" parent="label_input">
        <item name="android:maxLength">60</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="check_box">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="check_box_rtl">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
    </style>

    <style name="bottom_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/action_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
